{
	"name": "vcfer",
	"version": "1.0.0",
	"description": "A robust, heavily typed vCard and jCard parser.",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"files": [
		"lib/**/*"
	],
	"scripts": {
		"test": "jest --colors",
		"test:watch": "jest --colors --watch",
		"build": "tsc",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint \"src/**/*.ts\"",
		"documentation": "rm -rf ./docs && typedoc --theme docusaurus2",
		"prepare": "npm run build",
		"prepublishOnly": "npm test && npm run lint",
		"preversion": "npm run lint && npm run documentation",
		"version": "npm run format && git add -A src",
		"postversion": "git push && git push --tags"
	},
	"jest": {
		"verbose": true,
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"collectCoverage": true,
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!src/index.ts"
		],
		"coverageReporters": [
			"json",
			"lcov",
			"text"
		],
		"moduleDirectories": [
			"node_modules"
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mcpar-land/vcfer"
	},
	"bugs": {
		"url": "https://github.com/mcpar-land/vcfer/issues"
	},
	"homepage": "https://github.com/mcpar-land/vcfer#readme",
	"keywords": [
		"vcard",
		"jcard",
		"vcf",
		"typescript"
	],
	"author": "mcpar-land",
	"license": "ISC",
	"devDependencies": {
		"@types/jest": "^24.0.23",
		"@types/node": "^12.12.7",
		"@typescript-eslint/eslint-plugin": "^2.7.0",
		"@typescript-eslint/parser": "^2.7.0",
		"eslint": "^6.6.0",
		"eslint-config-prettier": "^6.5.0",
		"eslint-plugin-prettier": "^3.1.1",
		"jest": "^24.9.0",
		"prettier": "^1.19.1",
		"ts-jest": "^24.1.0",
		"typedoc": "^0.15.2",
		"typedoc-plugin-internal-external": "^2.0.2",
		"typedoc-plugin-markdown": "^2.2.11",
		"typescript": "^3.7.2"
	},
	"dependencies": {
		"camelcase": "^5.3.1",
		"foldline": "^1.1.0"
	}
}
